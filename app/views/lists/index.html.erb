<div class="container">
  <div class="app-bar-top">
    <%= link_to products_path do %>
      <span class="material-icons black-text">chevron_left</span>
    <% end %>
  </div>
</div>

<div class="container">
  <h2>Previous shopping</h2>
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="list-history-container">
          <div class="list-date-user">
            <h6 class="list-date"><%= list.date.strftime("%d %h %Y") %></h6>
            <p class="list-user"><%= list.user.name %></p>
          </div>
          <% @lists_of_products[list.id - 1][0..3].each do |product| %>
            <% if product.photo.attached? %>
              <%= cl_image_tag product.photo.key, class: "list-photo", crop: :fill %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
</div>
