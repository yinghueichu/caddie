<div class="container">
  <h2>products to buy</h2>
  <div class="list">
    <% @products_to_buy.each do |product| %>
    <div class="list-item">
      <%= product.name %>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h2>products bought</h2>
  <div class="list">
    <% @products_bought.each do |product| %>
    <div class="list-item">
      <%= product.name %>
    </div>
    <% end %>
  </div>
</div>
