<div class="container">
  <div class="fixed-action-btn">
    <%= link_to new_product_path, class: "btn-floating btn-large lime darken-3" do %>
      <i class="large material-icons">add</i>
    <%end %>
  </div>
</div>


<div class="container">
  <h2>products to buy</h2>
  <div class="list">
    <% @products_to_buy.each do |product| %>
    <div class="list-item">
      <%= product.name %>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h2>products bought</h2>
  <div class="list">
    <% @products_bought.each do |product| %>
    <div class="list-item">
      <p style="text-decoration: line-through"><%= product.name %></p>
    </div>
    <% end %>
  </div>
</div>
